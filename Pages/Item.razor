@page "/item"
@page "/item/{id:int}"

@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject ITodoItemRepository Repository

<PageTitle>New todo item</PageTitle>

<MudAppBar Color="Color.Primary">
    <MudText Typo="Typo.body1">New todo item</MudText>
    <MudSpacer />
    <MudTooltip Text="Save">
        <MudIconButton Icon="@Icons.Material.Outlined.Save" Color="Color.Inherit" aria-label="save"
            OnClick="SaveAsync" />
    </MudTooltip>
</MudAppBar>

<MudForm>
    <MudTextField Label="Title" @bind-Value="todoItem.Title" />
    <MudTextField Label="Due" @bind-Value="todoItem.Due" />
    <MudSwitch Label="Completed" @bind-Value="todoItem.Completed" />
</MudForm>